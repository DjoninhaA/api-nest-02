generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}


model User {
  id String @default(uuid()) @id
  email String @unique
  name String
  task Task []

}

model Task {
  id String @default(uuid()) @id
  title String
  content String
  status   TaskStatus @default(PENDING)
  authorId String
  author User @relation(fields: [authorId], references: [id])
}

